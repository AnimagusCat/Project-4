<div class="container">

	<div class="text-bg">

		<h1 class="new-outlet-title">Add New Outlet</h1>
		<br/>
		<%= form_with scope: :outlet, url: outlets_path, local: true do |form| %>

			<div class="form-row">
		  <div class="form-group col-md-12">
		    <b><%= form.label :name %></b>
			   <%= form.text_field :name, {:class=> "form-control", :minlength => 3, :maxlength => 50, :required => "true"} %>
		  </div>

		  <div class="form-group col-md-6">
		    <b><%= form.label :block %></b>
			   <%= form.text_field :block, {:class=> "form-control", :required => "true"} %>
			 </div>

			<div class="form-group col-md-6">
			  <b><%= form.label :road %></b>
			   <%= form.text_field :road, {:class=> "form-control", :required => "true"} %>
		  </div>

		  <div class="form-group col-md-6">
		    <b><%= form.label :unit %></b>
		    <div class="input-group mb-3">
			    <div class="input-group-prepend">
			    	<span class="input-group-text">#</span>
			    </div>
				   <%= form.text_field :unit, {:class=> "form-control"} %>
				</div>
		  </div>

		  <div class="form-group col-md-6">
		    <b><%= form.label :building %></b>
			  <%= form.text_field :building, {:class=> "form-control"} %>
			  <small id="buildingHelpBlock" class="form-text text-muted">
				  Eg. Plaza Singapura. Leave blank if not applicable.
				</small>
			</div>

			<div class="form-group">
			  <b><%= form.label :postal_code %></b>
			  <div class="input-group mb-3">
			    <div class="input-group-prepend">
			    	<span class="input-group-text">Singapore</span>
			    </div>
			  	<%= form.text_field :postal_code, {:class=> "form-control", :required => "true"} %>
			  </div>
		  </div>

		  <div class="form-group col-md-12">
			  <b>Halal Status</b>
			  <br />
				<select id="halal_type" name="outlet[halal_type]" class="custom-select">
					<option value="Muslim Owned">Muslim-owned</option>
					<option value="Halal Certified">Halal-certified</option>
				</select>
			</div>

			<div class="form-group col-md-12">
				<b>Type Of Eating Establishment</b>
				<br />
			  <select id="dining_type" name="outlet[dining_type]" class="custom-select">
				  <option value="Hawker">Hawker</option>
				  <option value="Restaurant">Restaurant</option>
				  <option value="Cafe">Cafe</option>
				  <option value="Kiosk">Kiosk</option>
				  <option value="Foodcourt">Foodcourt</option>
				  <option value="Bazaar">Bazaar</option>
				</select>
			</div>

			<div class="form-check col-md-12">
				<b>Type Of Cuisine(s)</b>
				<br />
			  <%= form.collection_check_boxes :cuisine_ids, @cuisines, :id, :name, {:class => "checkboxes"} %>
			</div>

		  <div class="form-group col-md-12">
		    <b><%= form.label :menu %></b>
		    <br/>
		    <%= form.file_field :menu, {:required => "true"} %>
		  </div>

		  <div class="form-group col-md-12">
			  <b><%= form.label :website %></b>
			  <%= form.text_field :website, {:class=> "form-control"} %>
		  </div>

		  <div class="form-group col-md-12">
		    <b><%= form.label :phone %></b>
		    <div class="input-group mb-3">
			    <div class="input-group-prepend">
			    	<span class="input-group-text">+65</span>
			    </div>
			    <%= form.text_field :phone, {:class=> "form-control"} %>
			  </div>
		  </div>


		  <div class="form-group col-md-12">
		    <b><%= form.label :opening_hours %></b>
		    <%= form.text_area :opening_hours, {:class=> "form-control", :required => "true"} %>
		  </div>

		  <div class="edit-page-buttons">
				<%= link_to 'Back', outlets_path, {:class => "btn btn-outline-back"} %>
		  <%= form.submit "Submit", class: "btn btn-submit" %>
			</div>

		<% end %>
	</div>
</div>