<div class="container">

	<div class="card outlet-card">

		<% if @outlet.halal_type === "Halal Certified" %>
			<div class="card-header results-card-header-c">
				<span class="halal-type"><%= @outlet.halal_type %></span>
				<span class="dining-type" style="text-transform: capitalize"><%= @outlet.dining_type %></span>
			</div>
		<% end %>

		<% if @outlet.halal_type === "Muslim Owned" %>
			<div class="card-header results-card-header-m">
				<span class="halal-type"><%= @outlet.halal_type %></span>
				<span class="dining-type" style="text-transform: capitalize"><%= @outlet.dining_type %></span>
			</div>
		<% end %>


  <div class="card-body outlet-card-body">
  	<img class="outlet-card-avatar" src= <%= @outlet.user.avatar %> />

  	<h1 class="card-title outlet-card-name"><%= @outlet.name %></h1>
  	<p class="card-text outlet-card-address-1"><%= @outlet.block %> <%= @outlet.road %> <%= @outlet.unit %> <%= @outlet.building %></p>
  	<p class="card-text outlet-card-address-2">Singapore <%= @outlet.postal_code %></p>

    <div class="outlet-card-info">
    	<p class="card-text"><%= @outlet.opening_hours %></p>

    	<% if @outlet.website === "" %>
	      <p></p>
	    <% else %>
	      <p class="card-text"><%= link_to 'website', @outlet.website, :target => "_blank" %></p>
	     <% end %>

	    <% if @outlet.phone === "" %>
	    	<p></p>
	    <% else %>
    		<p class="card-text">+65 <%= @outlet.phone %></p>
    	<% end %>
    </div>


    <!-- Button trigger modal -->
    <div class="outlet-card-menu">
    	<p>Menu</p>
    </div>
    <a data-toggle="modal" data-target="#exampleModalCenter">
		  <img class="img-fluid outlet-card-menu-button" src= <%= @outlet.menu %>  />
		</a>

		<!-- Modal -->
		<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
		  <div class="modal-dialog modal-xl" role="document">
		    <div class="modal-content">
		      <div class="modal-header">
		        <h5 class="modal-title" id="exampleModalCenterTitle">Menu</h5>
		        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
		          <span aria-hidden="true">&times;</span>
		        </button>
		      </div>
		      <div class="modal-body">
		        <img class="img-fluid" src= <%= @outlet.menu %>  />
		      </div>
		    </div>
		  </div>
		</div>



  </div>
</div>

	<div class="show-buttons">
		<%= link_to 'Back', outlets_path, {:class => "btn btn-outline-back"} %>

		<% if user_signed_in? == true && @outlet.user_id == current_user.id %>
	  	<%= link_to 'Edit', edit_outlet_path(@outlet), {:class => "btn btn-edit"} %>
	  <% end %>

	</div>

</div>