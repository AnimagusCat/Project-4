<div class="container">
	<h1 class="results-title">Listing all outlets in "<%= params[:keyword] %>"</h1>

	<% @outlets.each do |outlet| %>
		<div class="card results-card">
		<div class="row">

			<% if outlet.halal_type === "Halal Certified" %>
				<div class="col-2 results-card-header-c">
						<p class="halal-type"><%= outlet.halal_type %></p>
						<p class="dining-type" style="text-transform: capitalize"><%= outlet.dining_type %></p>
				</div>
			<% end %>

			<% if outlet.halal_type === "Muslim Owned" %>
				<div class="col-2 results-card-header-m">
					<p class="halal-type"><%= outlet.halal_type %></p>
					<p class="dining-type" style="text-transform: capitalize"><%= outlet.dining_type %></p>
				</div>
			<% end %>

			<div class="col-4 outlet-logo">
				<img src= <%= outlet.user.avatar %> />
			</div>

			<div class="col-6 outlet-info">
				<h5 class="card-title outlet-name"><a href="/outlets/<%= outlet.id %>"><%= outlet.name %></a></h5>
				<p class="card-text address"><%= outlet.block %> <%= outlet.road %> <%= outlet.unit %> <%= outlet.building %></p>
				<p class="card-text address">Singapore <%= outlet.postal_code %></p>
			  </div>

			</div>


	</div>

<% end %>






</div>