<div class="container">

	<div class="text-bg">

		<h1 class="edit-user-profile">Edit Profile</h1>
		<br/>
		<%= form_with scope: :user, model: @user, local: true do |form| %>

		<div class="form-row">
		  <div class="form-group col-md-12">
		    <b><%= form.label :name %></b>
			   <%= form.text_field :name, {:class=> "form-control", :minlength => 3, :maxlength => 50, :required => "true"} %>
		  </div>

		 <div class="form-group col-md-12">
		   <b><%= form.label :avatar %></b>
			   <%= form.file_field :avatar %>
		 </div>

		 <p>
		    <%= form.submit "Save", class: "btn btn-form" %>
		  </p>

<% end %>
	</div>
</div>